<!-- Módulo que muestra en pantalla los profesores y las materias que dictan -->

<!DOCTYPE html>
<html>
<head>
  <title>Profesores y materias</title>
</head>
<body>

     <header>
        <%- include('../views/partials/header1'); %>
    </header>
    
    <h1 class="text-info text-center mt-2">LISTADO DE PROFESORES,MATERIAS, CURSOS Y HORARIOS QUE DICTAN</h1>
     <main>
        <div class="container-fluid">
            <div class="row mt-2 ml-2 mr-2 ">
                <div class="col-md-12 text-center table-responsive">
                        
                    <table class="table table-hover ">
                        <thead>
                            <tr>
                        
                              <th class="border-primary text-body fs-5">APELLIDO NOMBRE</th>
                              <th class="border-primary text-body fs-5">MATERIA</th>
                              <th class="border-primary text-body fs-5">CURSO</th>
                              <th class="border-primary text-body fs-5">DÍAS DE SEMANA - HORA DE INICIO - HORA FINAL</th>
                          
                            </tr>
                        </thead>
                        <tbody>
                            <% profesores.forEach(p => { %>
                                <tr class="fs-6">
                                    <td><%= p.apellido_nombre %></td>

                                    <!-- Materias -->
                                    <td>
                                        <% if (p.materias.length > 0) { %>
                                        
                                           <% p.materias.forEach(m => { %>
                                               <%= m %> 
                                            <% }) %>
                                        
                                        <% } else { %>
                                        <em>Sin materias</em>
                                        <% } %>
                                    </td>

                                    <!-- Cursos -->
                                    <td>
                                        <% if (p.cursos.length > 0) { %>
                                        
                                            <% p.cursos.forEach(c => { %>
                                            <%= c %>
                                            <% }) %>
                                        
                                        <% } else { %>
                                        <em>Sin cursos</em>
                                        <% } %>
                                    </td>

                                    <!-- Horarios -->
                                    <td>
                                        <% for (let i = 0; i < p.dias.length; i++) { %>
                                            
                                                <%= p.dias[i] %>
                                                <%= p.horas_inicio[i] %>
                                                <%= p.horas_fin[i] %>
                                        <% } %>
                                    </td>
                                </tr>
                             
                          <% }) %>
                        </tbody>   
                    </table>
                </div>
            </div>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </main>

</body>
</html>