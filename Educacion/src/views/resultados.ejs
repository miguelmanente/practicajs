<!DOCTYPE html>

<body>
    <header>
        <%- include('../views/partials/header'); %>
    </header>
    
    <main>
        <div class="container-fluid">
            <div class="row mt-5 ml-2 mr-2 ">
                <div class="col-md-12 text-center table-responsive">
                    <h2>INFORMACIÓN DEL DOCENTE</h2>      
                    <table class="table table-bordered table-hover ">
                        <thead>
                            <tr>
                              <th class="border-primary">Nº</th>
                              <th class="border-primary">NOMBRES</th>
                              <th class="border-primary">APELLIDOS</th>
                              <th class="border-primary">DNI</th>
                              <th class="border-primary">FECNAC</th>
                              <th class="border-primary">EMAIL</th>
                              <th class="border-primary">CELULAR</th>
                              <th class="border-primary">DIRECCION</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% profesor.forEach(profesor => { %>
                                <tr>
                                  <td class="border-primary"><%= profesor.idprofesor %></td>
                                  <td class="border-primary"><%= profesor.nombre %></td>
                                  <td class="border-primary"><%= profesor.apellido %></td>
                                  <td class="border-primary"><%= profesor.dni %></td>
                                  <td class="border-primary"><%= profesor.f_nacimiento %></td>
                                  <td class="border-primary"><%= profesor.email %></td>
                                  <td class="border-primary"><%= profesor.celular %></td>
                                  <td class="border-primary"><%= profesor.direccion %></td>
                                </tr>
                              
                                <% }
                            ) %>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </main>
    
</body>
</html>