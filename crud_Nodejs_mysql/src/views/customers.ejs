<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD</title>

    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">

<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-brand">CRUD Nodejs Mysql</a>
    </nav>

    <div class="container-">
        <div class="row mt-3">
            <div class="col-md-9 text-center">
                <table class="table table-bordered table-hover table-responsive">
                    <thead>
                        <tr>
                            <th class="border-primary">NÂº</th>
                            <th class="border-primary">NAME</th>
                            <th class="border-primary">ADDRESS</th>
                            <th class="border-primary">PHONE</th>
                            <th class="border-primary">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) { %>
                            <% for (var i=0; i < data.length; i++) { %>
                                <tr>
                                    <td class="border-primary">
                                        <%= (i + 1) %>
                                    </td>
                                    <td class="border-primary">
                                        <%= data[i].name %>
                                    </td>
                                    <td class="border-primary">
                                        <%= data[i].address %>
                                    </td>
                                    <td class="border-primary">
                                        <%= data[i].phone %>
                                    </td>
                                    <td class="border-primary">
                                        <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                                        <a href="/update/<%= data[i].id %>" class="btn btn-info">Update</a>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3 bd-2">
                <div class="card border-primary">
                    <div class="card-body">
                        <form action="/add" method="post">
                            <div class="form-group">
                                <input type="text" name="name" placeholder="NAME" class="form-control border-primary">
                            </div>
                            <div class="form-group">
                                <input type="text" name="address" placeholder="ADDRESS" class="form-control border-primary">
                            </div>
                            <div class="form-group">
                                <input type="text" name="phone" placeholder="PHONE" class="form-control border-primary">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">
                                Save Customer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>